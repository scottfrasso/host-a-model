  "version": "0.2.0",
  "configurations": [
    {
      "name": "API Server",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app", // This now points to /server/main.py
        "--reload",
        "--port",
        "8000" // Specify the port if not the default
      ],
      "jinja": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}/server" // Ensures the current working directory is the root of your workspace
    },
    {
      "name": "PubSub API Server",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "pubsub_api:app", // This now points to /server/main.py
        "--reload",
        "--port",
        "8082" // Specify the port if not the default
      ],
      "jinja": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}/server" // Ensures the current working directory is the root of your workspace
    }
  ]
}
